<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Switch
        android:id="@+id/frontLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Front light"
        android:layout_marginBottom="165dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/backLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back lights"
        android:layout_above="@+id/frontLight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find my bike"
        android:id="@+id/buttonFind"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:onClick="findBike" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch navigation"
        android:id="@+id/buttonNav"
        android:layout_marginBottom="121dp"
        android:layout_above="@+id/backLight"
        android:layout_alignLeft="@+id/buttonFind"
        android:layout_alignStart="@+id/buttonFind"
        android:onClick="newNav" />

</RelativeLayout>

